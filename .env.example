AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"


# ============================================================================
# UPLOAD SYSTEM CONFIGURATION
# ============================================================================

# Default upload provider: local, s3, r2, cloudinary
UPLOAD_PROVIDER=local

# Maximum upload size in bytes (default: 10MB)
UPLOAD_MAX_SIZE=10485760

# Note: AWS S3 configuration uses AWS_* variables defined above
# Cloudflare R2 Configuration (for R2 upload provider)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_ENDPOINT=
R2_URL=

# Cloudinary Configuration (for Cloudinary upload provider)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_SECURE=true

# ============================================================================
# PAYMENT SYSTEM CONFIGURATION
# ============================================================================

# Default payment provider: stripe, paypal, paystack, flutterwave
PAYMENT_PROVIDER=stripe

# Stripe Configuration
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# PayPal Configuration
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=

# Paystack Configuration
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_WEBHOOK_SECRET=

# Flutterwave Configuration
FLUTTERWAVE_PUBLIC_KEY=
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_SECRET_HASH=

# ============================================================================
# SANCTUM CONFIGURATION
# ============================================================================

SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1
SANCTUM_TOKEN_PREFIX=
