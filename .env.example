# ============================================================================
# APPLICATION
# ============================================================================

APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file

FRONTEND_URL=http://localhost:5173
SUPPORT_EMAIL=hello@example.com

BCRYPT_ROUNDS=12

# ============================================================================
# LOGGING
# ============================================================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================================
# DATABASE
# ============================================================================

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=
# DB_URL=
# DB_SOCKET=
# DB_CHARSET=utf8mb4
# DB_COLLATION=utf8mb4_unicode_ci

# ============================================================================
# SESSION
# ============================================================================

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================================================
# QUEUE
# ============================================================================

QUEUE_CONNECTION=database

# ============================================================================
# CACHE
# ============================================================================

CACHE_STORE=database
# CACHE_PREFIX=
# CACHE_CLEAR_SECRET_TOKEN=

# ============================================================================
# REDIS
# ============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================================================
# MEMCACHED
# ============================================================================

# MEMCACHED_HOST=127.0.0.1
# MEMCACHED_PORT=11211

# ============================================================================
# MAIL
# ============================================================================

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="${SUPPORT_EMAIL}"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_TEMPLATE=default

# ============================================================================
# FILESYSTEM
# ============================================================================

FILESYSTEM_DISK=local

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Cloudflare R2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_REGION=auto
R2_ENDPOINT=
R2_URL=
R2_USE_PATH_STYLE_ENDPOINT=true

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_SECURE=true

# ============================================================================
# UPLOAD
# ============================================================================

UPLOAD_PROVIDER=local
UPLOAD_MAX_SIZE=262144000

# ============================================================================
# IMAGE & VIDEO
# ============================================================================

IMAGE_DRIVER=gd

FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe
VIDEO_PROCESSING_ENABLED=true

# ============================================================================
# STORAGE & MEDIA
# ============================================================================

STORAGE_CHECK_ACTUAL_SIZES=true
ALLOW_PERMANENT_MEDIA_DELETION=false

# ============================================================================
# CURRENCY / EXCHANGE RATES
# ============================================================================
# EXCHANGE_RATE_PROVIDER=frankfurter|exchangerate (exchangerate = open.er-api.com, 165+ currencies)
EXCHANGE_RATE_PROVIDER=exchangerate

# ============================================================================
# PAYMENT
# ============================================================================
# PAYMENT_MODE=test|live (default: test in local/dev, live in production)
# test = mock API + test keys only; live = real API + live keys only
PAYMENT_MODE=test

PAYMENT_PROVIDER=stripe

# Stripe (STRIPE_TEST_MODE=true = mock mode, no keys needed)
STRIPE_TEST_MODE=
STRIPE_TEST_PUBLIC_KEY=
STRIPE_TEST_SECRET=
STRIPE_TEST_WEBHOOK_SECRET=
STRIPE_LIVE_PUBLIC_KEY=
STRIPE_LIVE_SECRET=
STRIPE_LIVE_WEBHOOK_SECRET=

# PayPal
PAYPAL_TEST_CLIENT_ID=
PAYPAL_TEST_CLIENT_SECRET=
PAYPAL_TEST_WEBHOOK_ID=
PAYPAL_LIVE_CLIENT_ID=
PAYPAL_LIVE_CLIENT_SECRET=
PAYPAL_LIVE_WEBHOOK_ID=

# Paystack
PAYSTACK_TEST_PUBLIC_KEY=
PAYSTACK_TEST_SECRET_KEY=
PAYSTACK_TEST_WEBHOOK_SECRET=
PAYSTACK_LIVE_PUBLIC_KEY=
PAYSTACK_LIVE_SECRET_KEY=
PAYSTACK_LIVE_WEBHOOK_SECRET=

# Flutterwave (webhook: POST /api/v1/webhooks/flutterwave; dashboard secret hash must match FLUTTERWAVE_*_SECRET_HASH)
FLUTTERWAVE_TEST_MODE=
FLUTTERWAVE_TEST_PUBLIC_KEY=
FLUTTERWAVE_TEST_SECRET_KEY=
FLUTTERWAVE_TEST_SECRET_HASH=
FLUTTERWAVE_LIVE_PUBLIC_KEY=
FLUTTERWAVE_LIVE_SECRET_KEY=
FLUTTERWAVE_LIVE_SECRET_HASH=

# ============================================================================
# SANCTUM
# ============================================================================

SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:5173,127.0.0.1,127.0.0.1:8000,127.0.0.1:5173,::1
SANCTUM_TOKEN_PREFIX=

# ============================================================================
# OAUTH
# ============================================================================

# Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/api/v1/auth/oauth/google/callback"

# Dropbox
DROPBOX_CLIENT_ID=
DROPBOX_CLIENT_SECRET=
DROPBOX_REDIRECT_URI="${APP_URL}/api/v1/cloud-storage/oauth/dropbox/callback"

# OneDrive
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=
ONEDRIVE_REDIRECT_URI="${APP_URL}/api/v1/cloud-storage/oauth/onedrive/callback"

# Box
BOX_CLIENT_ID=
BOX_CLIENT_SECRET=
BOX_REDIRECT_URI="${APP_URL}/api/v1/cloud-storage/oauth/box/callback"

# Adobe
ADOBE_CLIENT_ID=
ADOBE_CLIENT_SECRET=
ADOBE_REDIRECT_URI="${APP_URL}/api/v1/cloud-storage/oauth/adobe/callback"

# ============================================================================
# BROADCASTING
# ============================================================================

BROADCAST_DRIVER=log
# BROADCAST_DRIVER=pusher

# Pusher (https://pusher.com)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=us2
PUSHER_PORT=443
PUSHER_SCHEME=https
# PUSHER_HOST=

# ============================================================================
# VITE (shared with frontend build)
# ============================================================================

VITE_APP_NAME="${APP_NAME}"
